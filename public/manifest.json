{
  "name": "Better WFH",
  "description": "A tool for better handling of WFH in central",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Better WFH",
    "default_icon": "vite.svg",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "webRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://central.intelliarts.com/*"
  ]
}